/**index.wxss**/

.videoBox {
  padding: 10rpx 0;
}

.recommendMV_item {
  width: 100%;
}

.recommendMV_item_imgbox {
  width: 100%;
  height: 400rpx;
  position: relative;
  border-radius: 4px;
  overflow: hidden;
}

.recommendMV_item_img {
  width: 100%;
  height: 100%;
}

.musicListitem_name {
  font-size: 26rpx;
  margin: 5px 0;
  overflow: hidden;
  height: 80rpx;
  padding: 0 3px;
  margin-bottom: 20rpx;
}

.playCount_box {
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  color: #fff;
  font-size: 24rpx;
  height: 40rpx;
  text-shadow: 1px 1px 4px #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.playCount_icon {
  font-size: 28rpx;
  margin-right: 3px;
}

.artistName {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
  font-size: 22rpx;
  color: #fff;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid #fff;
}

.playBtn {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.playBtn view {
  font-size: 80rpx;
  color: #fff;
   text-shadow: 0px 0px 9px rgba(0, 0, 0, 0.6); 
}
.itemName{
  font-weight: bold;
  display: block;
  line-height: 40rpx;
}