<wxs src="../../../../../filter/filter.wxs" module="filter" />
<template name="recommendMV">
  <view class='recommendMV_item'>
    <view class='recommendMV_item_imgbox'>
      <image src='{{item.picUrl}}' class='recommendMV_item_img' mode="widthFix"></image>
      <view class='playCount_box'>
        <view class='iconfont icon-shipin4 playCount_icon'></view>
        <text class='playCount'>{{filter.over10000(item.playCount)}}</text>
      </view>
    </view>
    <view class='musicListitem_name'>{{item.name}}</view>
  </view>
</template>